def RUN(robot, entry1, entry2):
    A = int(entry1.get())
    print('the speed is ', A)
    robot.motor_controller.drive_pwm(A, A)
    B = int(entry2.get())
    print('the time is ', B)
    time.sleep(B)
    robot.motor_controller.stop()



def gogo(robot, event):
    print('You pressed the ' + event.keysym + ' key ')
    robot.motor_controller.drive_pwm(10 * int(event.keysym), 10 * int(event.keysym))
    print('speed is:', str(10 * int(event.keysym)))




